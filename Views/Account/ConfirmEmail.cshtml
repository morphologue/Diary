@using System.Security.Claims
@using System.Linq

@{
    ViewBag.Title = "Confirm Email";
}

<h2>@ViewBag.Title</h2>
<div>
    <p>
        Thank you for confirming your email.
        @if(!User.Claims.Any(c => c.Type == ClaimTypes.Name)) {
            <text>Please click
            @Html.ActionLink("here", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
            to log in.</text>
        }
    </p>
</div>
