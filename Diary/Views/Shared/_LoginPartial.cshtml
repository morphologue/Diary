@using Microsoft.AspNet.Identity
@using Microsoft.AspNet.Identity.Owin
@if (Request.IsAuthenticated)
{
    <li role="presentation">
        @{
            string display_name = Request.GetOwinContext().GetUserManager<ApplicationUserManager>().FindById(User.Identity.GetUserId()).DisplayName;
        }
        @Html.ActionLink(display_name, "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
    </li>
    <li role="presentation"><a href="javascript:document.getElementById('logoutForm').submit()">Log out</a></li>
}
else
{
    <li role="presentation">@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
}
