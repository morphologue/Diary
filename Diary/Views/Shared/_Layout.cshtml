<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @if (ViewBag.Title == null)
    {
        <title>Diary</title>
    }
    else
    {
        <title>@($"Diary - {ViewBag.Title}")</title>
    }
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("head", required: false)
</head>
<body>
    <div class="@(ViewBag.Unchained ?? false ? "container unchained" : "container")">
        <div class="header clearfix">
            <nav>
                <ul class="nav nav-pills pull-right">
                    @Html.Partial("_LoginPartial")
                </ul>
            </nav>
            @Html.ActionLink("Diary", "Index", "Home", routeValues: null, htmlAttributes: new { @class = "h3" })
        </div>
        @RenderBody()
        <footer>
            <hr>
            <p>Created by <a href="https://gavin-tech.com/">Gavin Heise</a></p>
        </footer>
    </div>

    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
    {
        @Html.AntiForgeryToken()
    }

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/ts_compiled/Site.js")
    @RenderSection("scripts", required: false)
</body>
</html>
